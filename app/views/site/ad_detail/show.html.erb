<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="card mt-4">
        <%= image_tag @ad.picture.url(:large), class: "card-img-top img-fluid" %>
        <div class="card-body">
          <h3 class="card-title"><%= @ad.title %></h3>
          <h4>R$ <%= @ad.price %></h4>
          <p class="card-text"><%= @ad.description.html_safe %></p>
          <span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
          4.0 stars
        </div>
      </div>
      <div class="card card-outline-secondary my-4">
        <div class="card-header">
          <h3>Opini√µes sobre o produto</h3>
        </div>
        <div class="card-body">
          <%= render partial: 'site/ad_detail/comments' %>
          <% if member_signed_in?  %>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#commentModal">
              Opinar sobre produto
            </button>
          <% else %>
            <button type="button" class="btn btn-success" disabled="disabled" data-toggle="modal" data-target="#commentModal">
              Opinar sobre produto
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

