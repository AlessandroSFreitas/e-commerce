<h2>Listando an√∫ncios de <%= current_member.email %></h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"><%= t("activerecord.attributes.ad.id") %></th>
      <th scope="col"><%= t("activerecord.attributes.ad.image") %></th>
      <th scope="col"><%= t("activerecord.attributes.ad.title") %></th>
      <th scope="col"><%= t("activerecord.attributes.ad.price") %></th>
      <th scope="col"><%= t("buttons.edit") %></th>
      <th scope="col"><%= t("buttons.destroy") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <th scope="row"><%= ad.id %></th>
        <td>
          <% if ad.picture.present? %>
            <%= image_tag ad.picture(:thumb) %>
          <% end %>
        </td>
        <td><%= ad.title %></td>
        <td>R$ <%= ad.price %></td>
        <td>
          <%= link_to t("buttons.edit"), edit_site_profile_ad_path(ad.id), class: "btn btn-primary btn-sm" %>
        </td>
        <td>
          <button type="button" class="btn btn-danger btn-sm">
            Apagar
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
