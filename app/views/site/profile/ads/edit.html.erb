<%= form_for([:site, :profile, @ad], html:{ multipart: true }) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :picture %> <br>
    <%= f.file_field :picture %>
    <%= image_tag @ad.picture.url(:medium), class: "img-thumbnail" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 5 %>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :description, {}, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <div class="input-group-prepend">
      <span class="input-group-text"><%= @ad.price.currency.symbol %></span>
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
  <%= submit_tag "Atualizar", class: "btn btn-default" %>
<% end %>
