<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h1 class="my-4">Categorias</h1>
      <div class="list-group">
        <% @categories.each do |category| %>
          <a href="#" class="list-group-item"><%= category.description %></a>
        <% end %>
      </div>
    </div>
    <div class="col-lg-9">
      <div id="carouselExampleIndicators" class="carousel slide my-4">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
          <div class="carousel-item active">
            <img class="d-block img-fluid" src="https://www.foodbanknt.org.au/wp-content/blogs.dir/12/files/2017/05/900x350-LandingPageBanner-updated.png" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="https://www.foodbanknt.org.au/wp-content/blogs.dir/12/files/2017/05/900x350-LandingPageBanner-updated.png" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="https://www.foodbanknt.org.au/wp-content/blogs.dir/12/files/2017/05/900x350-LandingPageBanner-updated.png" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="row">
        <% @ads.each do |ad| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100" style="width: 18rem;">
              <a href="#"><%= image_tag ad.picture.url(:medium, class: "card-img-top", alt: "Card image cap") %></a>
              <div class="card-body">
                <h5 class="card-title"><%= truncate(ad.title, length: 20) %></h5>
                <p class="card-text"><%= truncate(ad.description, length: 100) %></p>
                <h5><%= ad.price.currency.symbol %> <%= ad.price %></h5>
                <%= link_to "Ver anÃºncio", site_ad_detail_path(ad), class: "btn btn-primary" %>
              </div>
              <div class="card-footer">
                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
