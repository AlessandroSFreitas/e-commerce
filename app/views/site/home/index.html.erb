<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h1 class="my-4">Categorias</h1>
      <div class="list-group">
        <% @categories.each do |category| %>
          <a href="#" class="list-group-item"><%= category.description %></a>
        <% end %>
      </div>
    </div>
    <div class="col-lg-9">
      <div id="carouselExampleIndicators" class="carousel slide my-4">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
          <div class="carousel-item active">
            <img class="d-block img-fluid" src="https://www.google.com.br/url?sa=i&source=images&cd=&ved=2ahUKEwjwp_2e6dTeAhXDj5AKHfH6CI0QjRx6BAgBEAU&url=http%3A%2F%2Foutin.ca%2F2018%2F09%2F29%2Fbeers-for-queers-4%2F&psig=AOvVaw1iSNUT6bB9RshE_8XuTTnP&ust=1542316958295364" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="https://www.google.com.br/url?sa=i&source=images&cd=&cad=rja&uact=8&ved=2ahUKEwif4JmR6dTeAhVIjZAKHaUTD-kQjRx6BAgBEAU&url=https%3A%2F%2Fwww.pinterest.com%2Fpin%2F296745062926376557%2F&psig=AOvVaw1iSNUT6bB9RshE_8XuTTnP&ust=1542316958295364" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="https://www.google.com.br/url?sa=i&source=images&cd=&cad=rja&uact=8&ved=2ahUKEwifpNfi6NTeAhVClpAKHex7BoQQjRx6BAgBEAU&url=https%3A%2F%2Fwellsr.com%2Fvba%2Fadd-ins%2F&psig=AOvVaw1iSNUT6bB9RshE_8XuTTnP&ust=1542316958295364" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="row">

        <% @ads.each do |ad| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="#"><%= image_tag ad.picture.url(:medium, class: "img-responsive center-block") %></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="#"><%= truncate(ad.title, length: 20) %></a>
                </h4>
                <h5><%= humanized_money_with_symbol ad.price %></h5>
                <p class="card-text"><%= truncate(ad.description, length: 100) %></p>
              </div>
              <div class="card-footer">
                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
