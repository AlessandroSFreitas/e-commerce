<h1 class="page-header">Administradores</h1>
<div class="col-lg-10">
  <div class="panel panel-default">
    <div class="panel-heading">
        Lista de Administradores
        <%= link_to new_backoffice_admin_path, class: "btn btn-success pull-right", style: "margin-top: -7px" do %>
          Criar
        <% end %>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Email</th>
              <th>Editar</th>
              <th>Excluir</th>
            </tr>
          </thead>
          <tbody>
            <% @admins.each do |admin| %>
              <tr>
                <td>
                  <%= admin.id %>
                </td>
                <td>
                  <%= admin.email %>
                </td>
                <td>
                  <%= link_to edit_backoffice_admin_path(admin.id), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                </td>
                <td>
                  <button type="button" disabled="disabled" class="btn btn-danger btn-circle"><i class="fa fa-times"></i>
                  </button>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
