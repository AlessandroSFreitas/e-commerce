<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Nova Categoria</h1>

          <div class="col-lg-10">
            <div class="panel panel-default">
              <div class="panel-heading">
                  Categorias
              </div>
              <div class="panel-body">
                <%= form_for([:backoffice, @category]) do |f| %>
                  <div class="col-lg-6">
                    <div class="form-group">
                      <label>Descrição</label>
                      <%= f.text_field :description, class: "form-control", placeholder: "Ex: Animais" %>
                    </div>
                    <button type="submit" class="btn btn-success">Salvar</button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
