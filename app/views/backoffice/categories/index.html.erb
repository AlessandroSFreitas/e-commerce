<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
          <h2><%= current_admin.email %></h2>
          <h1 class="page-header">Cadastro de Categorias</h1>

          <div class="col-lg-10">
            <div class="panel panel-default">
              <div class="panel-heading">
                  Categorias
                  <%= link_to new_backoffice_category_path, class: "btn btn-success pull-right", style: "margin-top: -7px" do %>
                    Criar
                  <% end %>
              </div>
              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Descrição</th>
                        <th>Editar</th>
                        <th>Excluir</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @categories.each do |category| %>
                        <tr>
                          <td>
                            <%= category.id %>
                          </td>
                          <td>
                            <%= category.description %>
                          </td>
                          <td>
                            <%= link_to edit_backoffice_category_path(category.id), class: "btn btn-primary btn-circle" do %>
                              <i class="fa fa-edit"></i>
                            <% end %>
                          </td>
                          <td>
                            <button type="button" disabled="disabled" class="btn btn-danger btn-circle"><i class="fa fa-times"></i>
                            </button>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
